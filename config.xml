<?xml version='1.0' encoding='utf-8'?>
<widget id="com.codeb.anywherecommerce-testapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <!-- this is the name for the -target=bill  since we did not provide appa for the other targets this will work for now (otherwise we have to move it into the grunt file)-->
    <name>anywherecommerce walker testapp</name>
    <description>
        App runnign testcases for the anywherecommerce walker card reader - using the cordova-plugin-cardreader-anywherecommerce-walker plugin
    </description>
    <author email="g.heescher@code-b.com">
        Gerd Heescher
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />

    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="src/app/assets/appIcons/ios/icon152.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="src/app/assets/appIcons/ios/icon58.png" width="60" height="60" />
        <icon src="src/app/assets/appIcons/ios/icon152.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="src/app/assets/appIcons/ios/icon76.png" width="76" height="76" />
        <icon src="src/app/assets/appIcons/ios/icon152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="src/app/assets/appIcons/ios/icon40.png" width="40" height="40" />
        <icon src="src/app/assets/appIcons/ios/icon80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="src/app/assets/appIcons/ios/icon58.png" width="57" height="57" />
        <icon src="src/app/assets/appIcons/ios/icon152.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="src/app/assets/appIcons/ios/icon76.png" width="72" height="72" />
        <icon src="src/app/assets/appIcons/ios/icon152.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="src/app/assets/appIcons/ios/icon29.png" width="29" height="29" />
        <icon src="src/app/assets/appIcons/ios/icon58.png" width="58" height="58" />

        <!-- images are determined by width and height. The following are supported -->
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait.png" width="320" height="480" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait.png" width="640" height="960" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait.png" width="768" height="1024" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait@2x.png" width="1536" height="2048" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-landscape.png" width="1024" height="768" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-landscape@2x.png" width="2048" height="1536" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait.png" width="640" height="1136" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait.png" width="750" height="1334" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-portrait@2x.png" width="1242" height="2208" />
        <splash src="src/app/assets/appSplashScreens/ios/launch-landscape@2x.png" width="2208" height="1242" />

     </platform>

    <platform name="android">
        
        <preference name="android-minSdkVersion" value="16" />

         <!-- icons will be replaced with grunt during build process -->
        <icon src="src/app/assets/appIcons/android/36.png" density="ldpi" />
        <icon src="src/app/assets/appIcons/android/48.png" density="mdpi" />
        <icon src="src/app/assets/appIcons/android/72.png" density="hdpi" />
        <icon src="src/app/assets/appIcons/android/96.png" density="xhdpi" />
        <icon src="src/app/assets/appIcons/android/144.png" density="xxhdpi" />
        <icon src="src/app/assets/appIcons/android/192.png" density="xxxhdpi" />
        <!-- our fallback -->
        <icon src="src/app/assets/appIcons/android/96.png" />
    </platform>


    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />

</widget>
